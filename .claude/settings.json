{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Write",
      "Edit",
      "Bash(gh *)",
      "Bash(git *)",
      "Bash(npm run test *)",
      "Bash(npm run lint *)",
      "Bash(npm test *)",
      "Bash(npx jest *)",
      "Bash(npx vitest *)",
      "Bash(supabase status)",
      "Bash(supabase status *)",
      "Bash(supabase db push)",
      "Bash(supabase db push --local)",
      "Bash(supabase db reset)",
      "Bash(supabase db reset *)",
      "Bash(supabase test db)",
      "Bash(supabase test db *)",
      "Bash(supabase migration *)",
      "Bash(supabase gen types *)",
      "Bash(supabase functions serve *)",
      "Bash(npx supabase *)",
      "Bash(deno test *)"
    ],
    "deny": [
      "WebFetch",
      "Bash(supabase db push --linked *)",
      "Bash(supabase functions deploy *)",
      "Bash(supabase link *)",
      "Read(./.env)",
      "Write(./.env)",
      "Edit(./.env)",
      "Read(./.env.*)",
      "Write(./.env.*)",
      "Edit(./.env.*)",
      "Read(./secrets/**)",
      "Write(./secrets/**)",
      "Edit(./secrets/**)",
      "Read(./.git/**)",
      "Write(./.git/**)",
      "Edit(./.git/**)",
      "Read(**/*.pem)",
      "Write(**/*.pem)",
      "Edit(**/*.pem)",
      "Read(**/*id_rsa*)",
      "Write(**/*id_rsa*)",
      "Edit(**/*id_rsa*)",
      "Read(**/*_private_key*)",
      "Write(**/*_private_key*)",
      "Edit(**/*_private_key*)",
      "Read(~/.config/gh/**)",
      "Write(~/.config/gh/**)",
      "Edit(~/.config/gh/**)"
    ],
    "disableBypassPermissionsMode": "disable"
  }
}
